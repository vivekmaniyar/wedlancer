<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hp"
    tools:context=".AboutusActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/firstrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@drawable/wedlancerblacklogo" />
            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@id/logo"
                android:layout_marginTop="5dp"
                android:background="#e0e0e0" />
            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@id/view1"
                android:layout_marginTop="5dp"
                android:background="#e0e0e0" />

            <TextView
                android:id="@+id/txtheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:text="Get In Touch"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@id/txtheading"
                android:layout_marginTop="5dp"
                android:background="#e0e0e0"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstrl"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/cvfirstrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/contactimage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/contact_us" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cvsecondrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvfirstrl"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/email"
                            android:layout_width="75dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_mail" />
                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:text="connect@wedlancer.n"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/cvthirdrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvsecondrl"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/call"
                            android:layout_width="75dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_phone_call" />
                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:text="+91-9825920828"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/cvforthrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvthirdrl"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/address"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_gps" />
                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:text="201,Rajhans Olympia,Surat,Gujarat-395007"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>